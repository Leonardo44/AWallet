<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.llopez.awallet.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_listBillsFragment"
            app:destination="@id/listBillsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.llopez.awallet.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_listBillsFragment"
            app:destination="@id/listBillsFragment" />
    </fragment>
    <fragment
        android:id="@+id/listBillsFragment"
        android:name="com.llopez.awallet.ui.list_bills.ListBillsFragment"
        android:label="fragment_list_bills"
        tools:layout="@layout/fragment_list_bills" />
</navigation>