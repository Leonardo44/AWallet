<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvEarningCategoryItemListName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/monetary_value_default"
        android:textColor="@color/blue_primary_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewIdentifierEarningCategory"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvEarningCategoryItemListCreatedAtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvEarningCategoryItemListName"
        app:layout_constraintTop_toBottomOf="@+id/tvEarningCategoryItemListName" />

    <TextView
        android:id="@+id/tvEarningCategoryItemListCreatedAtValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvEarningCategoryItemListName"
        app:layout_constraintStart_toEndOf="@+id/tvEarningCategoryItemListCreatedAtTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvEarningCategoryItemListName" />

