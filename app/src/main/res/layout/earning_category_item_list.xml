    <Button
        android:id="@+id/btnDeleteEarningCategoryItemList"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/btn_add"
        android:text=""
        android:textColor="@color/gray_text"
        app:icon="@drawable/ic_baseline_delete_outline_24"
        app:iconGravity="top"
        app:iconTint="@color/gray_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEarningCategoryItemListCreatedAtValue"
        app:rippleColor="@android:color/holo_red_light"
        app:tint="@color/gray_text" />

    <Button
        android:id="@+id/btnUpdateEarningCategoryItem"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/btn_add"
        android:text=""
        android:textColor="@color/gray_text"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconGravity="top"
        app:iconTint="@color/gray_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteEarningCategoryItemList"
        app:layout_constraintTop_toBottomOf="@+id/tvEarningCategoryItemListCreatedAtValue"
        app:rippleColor="@color/blue_secondary_light"
        app:tint="@color/gray_text" />

    <View
        android:id="@+id/viewIdentifierEarningCategory"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
